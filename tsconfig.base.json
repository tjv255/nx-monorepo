{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "paths": {
      "@react-monorepo/automation": ["libs/automation/src/index.ts"],
      "@react-monorepo/form-controls-ui": [
        "libs/form-controls/ui/src/index.ts"
      ],
      "@react-monorepo/form-controls/pcfs/multi-select": [
        "libs/form-controls/pcfs/multi-select/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
